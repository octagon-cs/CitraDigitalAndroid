<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitraDigitalAndroid.Views.ApprovePage">
    <ContentPage.Content>
        <Grid BackgroundColor="#00ACAC">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Image Source="Logo_Pertamina.png" Margin="0,-10,0,0"/>
            </StackLayout>

            <Grid Grid.Row="1">
                <Frame BackgroundColor="#F5F3F3" CornerRadius="30"  >
                </Frame>
                <ScrollView Margin="0,30,0,0" >
                    <StackLayout BackgroundColor="#F5F3F3">
                        <Button Text="Cek Pemeriksaan Kembali" TextColor="Black" CornerRadius="10" Margin="20,20,20,0" BackgroundColor="#19DFDF"/>
                        <Button Text="Approve" TextColor="Black" CornerRadius="10" Margin="20,20,20,0" />
                    </StackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>